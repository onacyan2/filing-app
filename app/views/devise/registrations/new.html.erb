<%= form_with model: @user, url: user_registration_path, class: 'main', local: true do |f| %>

  <div class="sidenav">
    <div class="login-main-text">
      <h2>Application<br> Register Page</h2>
      <p>Login or register from here to access.</p>
    </div>
  </div>

  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <div class="form-group">
        <label>Company Name</label>
        <%= f.text_area :company_name, class:"form-control", id:"campany-name" %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, class:"form-control", id:"email" %>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, class:"form-control", id:"password" %>
      </div>
      <div class="form-group">
        <label>Password Confirmation</label>
        <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation" %>
      </div>
    </div>

    <%= f.submit "Login", class:"btn btn-login-orange" %>
    <%= f.submit "Register", class:"btn btn-registration-green" %>
  </div>

<% end %>
